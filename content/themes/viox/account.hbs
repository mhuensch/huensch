{{!< default}}

<div class="site-content-wrap">
    
        {{!-- <div class="account-page-wrap"> --}}
            {{#if @member.paid}}
            
            {{!-- Logged in, paying member: Show account info --}}
            <div class="hero-content text-center {{#if @site.cover_image}} has-image" style="background-image: url({{@site.cover_image}});{{/if}}">
                <div class="container flex">
                    <div class="hero-content-inner">
                        <h1 class="intro-title checkout-title">{{t "Nice, you're a subscriber!"}}</h1>
                        <h2 class="intro-description">{{t "Hey! You are currently logged in with"}} <strong>{{@member.email}}</strong>. {{t "You have an active"}} <strong>{{@site.title}}</strong> {{t "account with access to all areas. You're all set, but if you need any help, get in touch with us and we'd be happy to help."}}</h2>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col col-12">
                        <div class="text-center">
                            <h4>{{t "Read some exclusive posts only for paying member or"}}</h4>
                            <a href="{{@site.url}}" class="btn btn-primary">{{t "Return to home page"}}</a>
                        </div>
                        {{#get "posts" limit="10" filter="visibility:paid" include="tags,authors"}}
                        {{> loop}}
                        {{/get}}
                    </div>
                </div>
            </div>

            {{else if @member}}


            {{!-- Logged in, not paying: Link to checkout --}}
            <div class="hero-content text-center {{#if @site.cover_image}} has-image" style="background-image: url({{@site.cover_image}});{{/if}}">
                <div class="container flex">
                    <div class="hero-content-inner">
                        <h1 class="intro-title checkout-title">{{t "Nice, you're a subscriber!"}}</h1>
                        <h2 class="intro-description">{{t "Hey! You are currently logged in with"}} <strong>{{@member.email}}</strong>. {{t "You have subscribed to free updates from"}} {{@site.title}}. {{t "Subscribe to paid plan to unlock full access."}}</h2>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col col-12">
                        {{> members/pricing-table}}
                    </div>
                </div>
            </div>
            
            

            {{else}}

            {{!-- Not logged in: Redirect to signin --}}
            <script>window.location = '{{@site.url}}/signin/';</script>
            {{/if}}
        {{!-- </div> --}}
    </div>
</div>