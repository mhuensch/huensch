{{!< default}}

<div class="site-content-wrap">
    <div class="container">
        <div class="signin-page-wrap">
            {{#if @member}}

            {{!-- Logged in: Redirect home --}}
            <script>window.location = '{{@site.url}}/';</script>

            {{else}}

            {{!-- Not logged in: Sign in form --}}
            <form class="signin-form" data-members-form="signin">
                <div class="text-center">
                    <h1 class="form-title">{{t "Welcome back!"}}</h1>
                    <p class="form-subtitle">{{t "Sign into your account again for full access"}}</p>
                </div>
                <div class="form-field-wrap flex">
                    <label for="email" class="sr-only">{{t "Email"}}</label>
                    <input data-members-email type="email" class="email" id="email" placeholder="Your email address" required/>
                    <button class="btn btn-primary btn-submit" type="submit">{{t "Send login link"}}</button>
                </div>
                <div class="text-center">
                    <p><small>{{t "Don't have an account yet?"}} <a href="/signup/">{{t "Sign up"}}</a></small></p>
                    <div class="message-success">
                        <span class="icon">{{> icons/success-symbol}}</span><strong>{{t "Great!"}}</strong> {{t "Check your inbox and click the link to complete sign in"}}
                    </div>
                    <div class="message-error">
                        <span class="icon">{{> icons/error-symbol}}</span><strong>{{t "Error!"}}</strong> {{t "Please enter a valid email address!"}}
                    </div>
                </div>
            </form>

            {{/if}}
        </div>
    </div>
</div>