{{!< default}}

<div class="site-content-wrap">
    <div class="hero-content text-center {{#if @site.cover_image}} has-image" style="background-image: url({{@site.cover_image}});{{/if}}">
        <div class="container flex">
            <div class="hero-content-inner">
                <h1 class="intro-title checkout-title">{{t "Choose your subscription"}}</h1>
                <h2 class="intro-description">{{t "Unlock full access to"}} {{@site.title}} {{t "and see the entire library of members-only content & updates"}}
                </h2>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col col-12">
                <div class="members-page-wrap">
                    {{#if @member.paid}}

                        {{!-- Logged in, paying member: Redirect home --}}
                        <script>window.location = '{{@site.url}}/';</script>

                    {{else if @member}}

                        {{!-- Logged in, not paying: Check out --}}

                        {{> members/pricing-table}}

                    {{else}}
                        {{> members/pricing-table}}
                        <div class="text-center">
                            <small>{{t "Already have an account?"}} <a href="{{@site.url}}/signin/">{{t "Sign in"}}</a></small>
                        </div>

                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>