{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}
<div class="site-content-wrap">
{{#post}}
{{#if feature_image}}
<style>
    .hero-content {
        background-image: url({{feature_image}});
    }
</style>
{{/if}}
<div class="hero-content text-center single-post page {{post_class}}{{#if feature_image}} has-image{{/if}}">
    <div class="container flex">
        <div class="hero-content-inner">
            <h1 class="intro-title">{{title}}</h1>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col">
            <div class="loop-wrap flex">
                {{#get "tags" limit="all" include="count.posts" order="count.posts desc"}}
                {{#foreach tags}}
                <div class="loop-item-one-four">
                    <div class="tag-card flex text-center{{#if feature_image}} has-image{{/if}}">
                        <a href="{{url}}" class="permalink"></a>
                        {{#if feature_image}}
                        <div class="tag-image-wrap">
                            <img class="tag-image" srcset="{{img_url feature_image size="s"}} 300w,
                            {{img_url feature_image size="m"}} 600w,
                            {{img_url feature_image size="l"}} 1000w,
                            {{img_url feature_image size="xl"}} 2000w"
                    sizes="(max-width: 347px) 300px,(max-width: 647px) 600px, (max-width: 1400px) 600px, 1000px"
                    src="{{img_url feature_image size="s"}}" alt="{{title}}">
                        </div>
                        {{/if}}
                        <div class="tag-card-inner">
                            <h2 class="tag-name h4">{{name}}</h2>
                            <div class="post-count">{{plural count.posts empty=(t "0 Article") singular=(t "1 Article") plural=(t "% Articles")}}</div>
                        </div>
                    </div>
                </div>
                {{/foreach}}
                {{/get}}
            </div>
        </div>
    </div>
</div>
{{/post}}
</div>
{{> widget-subscribe}}